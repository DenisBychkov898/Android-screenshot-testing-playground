<resources>
    <!-- Base application theme. -->
    <style name="Theme.RoadToEffectiveSnapshotTesting" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!--
        Customize your theme here.
        These custom attributes are defined in other modules, but the app crashes if not added
        in /app
         -->
        <item name="memorise_title_color">@color/dark_grey</item>
        <item name="memorise_body_color">@color/super_light_grey</item>
        <item name="error_color">@color/design_default_color_error</item>
        <item name="delete_dialog_button_bar_color">@color/super_light_grey</item>
        <item name="delete_dialog_cancel_button_text_color">@color/dark_grey</item>
        <item name="delete_icon_color">@color/white</item>
        <item name="delete_circle_stroke_color">@color/pinkish_red</item>
    </style>
</resources>